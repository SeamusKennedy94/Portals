<Application x:Class="Portals.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Portals"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Theme dictionary will be injected at runtime -->
                <ResourceDictionary Source="Themes/LightTheme.xaml" />
                <ResourceDictionary Source="Styles/TabItemTemplate.xaml" />
                <ResourceDictionary Source="/Styles/TabControl.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
