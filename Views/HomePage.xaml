<UserControl x:Class="Portals.Views.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource BackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- Hero Banner -->
            <Border CornerRadius="12" Background="{DynamicResource SecondaryBackgroundBrush}" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Preview Image -->
                    <Image Source="/Assets/RDP-Preview.png" 
                           Stretch="Uniform" 
                           Height="180" 
                           Margin="0,0,20,0"
                           Grid.Column="0"
                           ClipToBounds="True"
                           />

                    <!-- Info + CTA -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Welcome back!" 
                                   FontSize="26"
                                   Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <TextBlock Text="Quickly jump into your most recent or favorite connections."
                                   FontSize="14" 
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   Margin="0,5,0,15"/>
                        <Button Content="New Connection"
                                Width="150"
                                Padding="10,5"
                                Background="{DynamicResource AccentBrush}"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Favorites -->
            <TextBlock Text="Favorites" 
           FontSize="20" 
           FontWeight="Bold"
           Foreground="{DynamicResource PrimaryTextBrush}"
           Margin="20,20,0,10"/>
            <ItemsControl x:Name="FavoriteConnectionsList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="10" 
                    Background="{DynamicResource SecondaryBackgroundBrush}" 
                    Padding="15" 
                    Margin="5"
                    Width="150"
                    Height="80">
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryTextBrush}"/>
                                <TextBlock Text="{Binding Address}" 
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Margin="0,5,0,10"/>
                                <Button Content="Connect" 
                            Background="{DynamicResource AccentBrush}" 
                            Foreground="White" 
                            BorderThickness="0"
                            Cursor="Hand"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Recent Connections -->
            <TextBlock Text="Recent Connections" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryTextBrush}"
                       Margin="0,0,0,10"/>
            <ItemsControl x:Name="RecentConnectionsList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="10" 
                                Background="{DynamicResource SecondaryBackgroundBrush}" 
                                Padding="15" 
                                Margin="5"
                                Width="200"
                                Height="120">
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" 
                                           FontSize="16" 
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource PrimaryTextBrush}"/>
                                <TextBlock Text="{Binding Address}" 
                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                           Margin="0,5,0,10"/>
                                <Button Content="Connect" 
                                        Background="{DynamicResource AccentBrush}" 
                                        Foreground="White" 
                                        BorderThickness="0"
                                        Cursor="Hand"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </ScrollViewer>
</UserControl>