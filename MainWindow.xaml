<Window x:Class="Portals.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Portals - Remote Desktop Manager"
        Height="750" Width="1200"
        WindowStyle="None"
        ResizeMode="CanResize"
        BorderThickness="0"
        Background="{DynamicResource BackgroundBrush}">
    
    <!-- Removes ReSize Border without remove default Effects -->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!-- Sidebar Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <!-- Title Bar -->
            <RowDefinition Height="Auto"/>
            <!-- Tabs -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Grid.Row="0" Background="{DynamicResource SecondaryBackgroundBrush}"
          MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Icon -->
                <ColumnDefinition Width="*"/>
                <!-- Spacer / drag area -->
                <ColumnDefinition Width="Auto"/>
                <!-- Window controls -->
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" Margin="10,0,5,0" Source="/Assets/Portals-Icon.png"
               Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>

            <!-- Window Controls -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="🌙☀️" Style="{StaticResource NavButtonStyle}" Click="OnThemeToggle" Margin="0,0,5,0"/>
                <Button Content="⚙️" Style="{StaticResource NavButtonStyle}" Margin="0,0,25,0" ToolTip="Settings"/>
                <Button Content="—" Width="40" Click="Minimize_Click" Background="Transparent" Foreground="{DynamicResource SecondaryTextBrush}" BorderThickness="0"/>
                <Button Content="▢" Width="40" Click="Maximize_Click" Background="Transparent" Foreground="{DynamicResource SecondaryTextBrush}" BorderThickness="0"/>
                <Button Content="✕" Width="40" Click="Close_Click" Background="Transparent" Foreground="{DynamicResource SecondaryTextBrush}" BorderThickness="0"/>
            </StackPanel>
        </Grid>

        <!-- Tabs row (just below title bar) -->
        <TabControl x:Name="WorkspaceTabs"
            Grid.Row="1"
            Background="{DynamicResource BackgroundBrush}"
            BorderThickness="0"
            Margin="10,0,10,0"
            SelectionChanged="WorkspaceTabs_SelectionChanged">
            <TabItem Header="+" x:Name="AddTabItem"/>
        </TabControl>

        <!-- Main content -->
        <ContentPresenter x:Name="MainContent" Grid.Row="2"/>
    </Grid>

</Window>