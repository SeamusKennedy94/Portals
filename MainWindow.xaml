<Window x:Class="Portals.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Portals - Remote Desktop Manager"
        Height="700" Width="1200"
        WindowStyle="None"
        ResizeMode="CanResize"
        BorderThickness="0">
    
    <!-- Removes ReSize Border without remove default Effects -->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!-- Sidebar Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Root Grid with Title Bar and Body -->
    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <!-- Title Bar -->
            <RowDefinition Height="*"/>
            <!-- Sidebar + Content -->
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <DockPanel Grid.Row="0" Background="#252525" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" Margin="0">
            <!-- App Title -->
            <TextBlock Text="Portals - Remote Desktop Manager"
                       Foreground="White"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"
                       FontSize="14"/>

            <!-- Window Controls -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                <Button Content="—" Width="40" Click="Minimize_Click" Background="Transparent" Foreground="White" BorderThickness="0"/>
                <Button Content="▢" Width="40" Click="Maximize_Click" Background="Transparent" Foreground="White" BorderThickness="0"/>
                <Button Content="✕" Width="40" Click="Close_Click" Background="Transparent" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </DockPanel>

        <!-- Sidebar + Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <!-- Sidebar -->
                <ColumnDefinition Width="*"/>
                <!-- Content -->
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <DockPanel Background="#2B2B2B" Grid.Column="0" LastChildFill="False">
                <StackPanel DockPanel.Dock="Top">
                    <Button Content="🏠" Style="{StaticResource NavButtonStyle}" ToolTip="Home"/>
                    <Button Content="➕" Style="{StaticResource NavButtonStyle}" ToolTip="New Connection" Click="NavButton_NewConnection"/>
                </StackPanel>
                
                <Button Content="⚙️" Style="{StaticResource NavButtonStyle}" Margin="10,0,10,25" ToolTip="Settings" DockPanel.Dock="Bottom"/>
            </DockPanel>

            <!-- Main Content -->
            <DockPanel Grid.Column="1" Background="#1E1E1E">
                <TabControl x:Name="MainTabs"
                            VirtualizingStackPanel.IsVirtualizing="False"
                            VirtualizingStackPanel.VirtualizationMode="Standard"
                            SelectionChanged="MainTabs_SelectionChanged"
                            Background="#1E1E1E"
                            >
                    <TabItem Header="Home">
                        <TextBlock Text="Home Page" Background="#1E1E1E"/>
                    </TabItem>
                    <TabItem Header="+"/>
                </TabControl>
            </DockPanel>
        </Grid>
    </Grid>
</Window>